@model List<AcunMedyaAkademiPortfolyo.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>About</h2>

<table class=" table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Güncelle</th>
        <th>Sil</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" alt="Image" style="max-width: 100px; max-height: 100px;" /></td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-warning"> Güncelle</a></td>
            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger"> Sil</a></td>

        </tr>

    }
</table>
<a href="/About/CreateAbout" class="btn btn-success">Yeni Hakkında Ekle</a>
