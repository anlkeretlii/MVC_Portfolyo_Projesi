@model List<AcunMedyaAkademiPortfolyo.Models.Hobby>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.HobbyId</td>
            <td><img src="@item.IconUrl" alt="Image" style="max-width: 100px; max-height: 100px;" /></td>
            <td>@item.Title</td>
            <td><a href="/Hobby/UpdateHobby/@item.HobbyId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Hobby/DeleteHobby/@item.HobbyId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Hobby/CreateHobby" class="btn btn-success">Yeni Hobi Ekle</a>

