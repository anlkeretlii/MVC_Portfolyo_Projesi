@model List<AcunMedyaAkademiPortfolyo.Models.Banner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Banner</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Banner</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BannerId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" alt="Image" style="max-width: 100px; max-height: 100px;" /></td>
            <td><a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Banner/DeleteBanner/@item.BannerId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Banner/CreateBanner" class="btn btn-success">Yeni Banner Ekle</a>
