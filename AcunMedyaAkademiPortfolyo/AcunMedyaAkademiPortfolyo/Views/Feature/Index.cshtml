@model List<AcunMedyaAkademiPortfolyo.Models.Feature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Feature</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Özellik Adı</th>
        <th>Özellik Başlığı</th>
        <th>Özellik Resmi</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureId</td>
            <td>@item.FeatureTitle</td>
            <td>@item.FeatureSubtitle</td>
            <td><img src="@item.FeatureImageUrl" alt="Image" style="max-width: 100px; max-height: 100px;" /></td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Feature/CreateFeature" class="btn btn-success">Özellik Ekle</a>
